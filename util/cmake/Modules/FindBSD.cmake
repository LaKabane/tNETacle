# Check if the definitions are not already in cache
IF(BSD_INCLUDE_DIRS AND BSD_LIBRARIES)
    SET(BSD_FIND_QUIETLY TRUE)
ENDIF(BSD_INCLUDE_DIRS AND BSD_LIBRARIES)

FIND_PACKAGE(PkgConfig QUIET)
PKG_CHECK_MODULES(PC_BSD libbsd)
SET(BSD_VERSION ${PC_BSD_VERSION})
SET(BSD_DEFINITIONS ${PC_BSD_DEFINITIONS})

FIND_PATH(BSD_INCLUDE_DIR bsd.h
    HINTS ${PC_BSD_INCLUDE_DIRS}
)

FIND_LIBRARY(BSD_LIBRARY NAMES bsd bsd-compat libbsd libbsd-compat
    HINTS ${PC_BSD_LIBRARY_DIRS}
)

IF(BSD_INCLUDE_DIR STREQUAL BSD_LIBRARY-NOTFOUND
  OR BSD_LIBRARY STREQUAL BSD_LIBRARY-NOTFOUND)
    UNSET(BSD_FOUND)
ELSE()
    IF(NOT BSD_VERSION)
        MESSAGE(STATUS "  but non-package 'libbsd' found")
        SET(BSD_VERSION "system")
    ENDIF(NOT BSD_VERSION)
    SET(BSD_FOUND TRUE)

    # cmake GUI niceness
    MARK_AS_ADVANCED(BSD_INCLUDE_DIR BSD_LIBRARY)
ENDIF()

IF(BSD_FOUND)
    SET(BSD_LIBRARIES ${BSD_LIBRARY})
    SET(BSD_INCLUDE_DIRS ${BSD_INCLUDE_DIR})
ENDIF(BSD_FOUND)

